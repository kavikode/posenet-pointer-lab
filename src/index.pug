doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title üê≠ PoseNet+
  link(rel='stylesheet' href='css/main.styl')
  //- Reduce build time
  script(src='lib/babylon.min.js')
  script(src='lib/babylon.loaders.min.js')

aside
  .panel.full-height
    .panel-header
      h1.panel-title üê≠ PoseNet+
      p Takes PoseNet poses as input and outputs head pose data
    .panel-body
      canvas#scene(width=640 height=480)
      canvas#overlay(width=640 height=480)
    .panel-body
      b Training Parameters
      .form-group
        label.form-label(for='sample-size') Sample Size
        input#sample-size.form-input(value=100 placeholder='Number of samples to collect')
    .panel-footer
      .btn-group.btn-group-block
        button#start-posenet.btn.btn-primary Start PoseNet
        button#start-training.btn.btn-primary(disabled) Start Training

article
  .panel.full-height
    .panel-header
      h2.panel-title Training Set
    .panel-body
      .container
        .columns
          .column.col-6
            label.form-label(for='training-features') Features
            textarea#training-features.form-input(rows='10')
          .column.col-6
            label.form-label(for='training-labels') Labels
            textarea#training-labels.form-input(rows='10')

script(src='js/app.js')